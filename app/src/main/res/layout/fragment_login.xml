<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.baliyaan.android.irctc_smart_booking.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User ID"
        android:id="@+id/fragment_login_useridlabel"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/fragment_login_passwordlabel"
        android:textSize="25dp"
        android:layout_below="@+id/fragment_login_useridlabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Captcha"
        android:id="@+id/fragment_login_captchalabel"
        android:textSize="25dp"
        android:layout_below="@+id/fragment_login_passwordlabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_userid"
        android:layout_toRightOf="@+id/fragment_login_useridlabel"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_password"
        android:layout_toRightOf="@+id/fragment_login_passwordlabel"
        android:layout_below="@+id/fragment_login_userid"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_captcha"
        android:layout_toRightOf="@+id/fragment_login_captchalabel"
        android:layout_below="@+id/fragment_login_password"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_captchaimage"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/fragment_login_captcha"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/fragment_login_loginbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/fragment_login_captcha"
        android:layout_alignEnd="@+id/fragment_login_captcha"
        android:layout_marginBottom="44dp" />


</RelativeLayout>